generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tournament {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  name            String          @db.VarChar(255)
  players         Player[]
  eliminationType EliminationType
  numberOfGroups  Int
  published       Boolean         @default(false)
  started         Boolean         @default(false)
  standings       GroupStanding[]
  matches         Match[]
}

model Player {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(255)
  tournament    Tournament      @relation(fields: [tournamentId], references: [id])
  tournamentId  Int
  groupNumber   Int?
  standing      GroupStanding?
  matchesAsPlayer1  Match[]  @relation("matchPlayer1")
  matchesAsPlayer2  Match[]  @relation("matchPlayer2")
}

model GroupStanding {
  id            Int         @id @default(autoincrement())
  tournament    Tournament  @relation(fields: [tournamentId], references: [id])
  tournamentId  Int
  player        Player      @relation(fields: [playerId], references: [id])
  playerId      Int         @unique
  groupNumber   Int
  games         Int         @default(0)
  wins          Int         @default(0)
  losses        Int         @default(0)
  diff          Int         @default(0)
  points        Int         @default(0)
  rank          Int?

  @@index([tournamentId, groupNumber])
}

model Match {
  id            Int         @id @default(autoincrement())
  tournament    Tournament  @relation(fields: [tournamentId], references: [id])
  tournamentId  Int
  groupNumber   Int
  player1       Player      @relation("matchPlayer1", fields: [player1Id], references: [id])
  player1Id     Int
  player2       Player      @relation("matchPlayer2", fields: [player2Id], references: [id])
  player2Id     Int
  score1        Int?
  score2        Int?
  played        Boolean     @default(false)

  @@unique([tournamentId, player1Id, player2Id])
  @@index([tournamentId, groupNumber])
}

enum EliminationType {
  MULTI
  SINGLE
}